<!doctype html>
<html>
  <head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"
          integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ=="
          crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/styles/custom.css">
    <title>Admin Dashboard</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Marissa's Admin Dashboard</h1>
          <h4>For Schedule With ID:  <%= id %></h2>
          <h5>Link to Scheduling Page:</h5>
          <a href="http://<%= host + schedule.schedulingPageUrl %>">http://<%= host %><%= schedule.schedulingPageUrl %></a>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <h3>Create New Time Slot</h3>
          <div class="form-group">
            <label for="start">Start Time</label><br>
            <input type="text" class="form-control" id="start" name="start"><br>
            <label for="end">End Time</label><br>
            <input type="text" class="form-control" id="end" name="end"><br>
            <label for="date">Date</label><br>
            <input type="text" class="form-control" id="date" name="date">
            <label for="comments">Comments</label><br>
            <input type="text" class="form-control" id="comments" name="comments">
            <input type="hidden" id="schedule-id" name="schedule-id" value="<%= id %>">
          </div>
          <button type="submit" class="btn btn-default" id="submit">Create</button>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8" id="slots">
          <h3>Time Slots:</h3>
          <% schedule.timeSlots.forEach(function(slot){ %>
          <div id="slot" data-id="<%= slot.id %>" data-start="<%= slot.startTime %>" data-end="<%= slot.endTime %>" data-date="<%= slot.date %>" data-comments="<%= slot.comments %>">
            <li>Start Time: <%= slot.startTime %></li>
            <li>End Time: <%= slot.endTime %></li>
            <li>Date: <%= slot.date %></li>
            <li>Comments: <%= slot.comments %></li>
          </div>
            <% }); %>
        </div>
      </div>
    </div>
    <script>
var scheduleId = <%- JSON.stringify(id) %>;
    </script>
    <script src="/jquery.js"></script>
    <script src="/lodash.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/application.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"
            integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>
  </body>
</html>
